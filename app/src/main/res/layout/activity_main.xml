<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.wwu.helesa.nfp.MainActivity"
    android:id="@+id/activity_main"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/nfp_logo"
        app:srcCompat="@drawable/nfp_logo_alpha"
        android:contentDescription="@string/nfp_logo_content_description"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dip"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/login_message"
        android:textAppearance="@style/LoginMessageText"
        android:text="@string/login_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="125dip" />

</RelativeLayout>
